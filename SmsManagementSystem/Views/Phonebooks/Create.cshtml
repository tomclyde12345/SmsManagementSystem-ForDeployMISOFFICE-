@model SmsManagementSystem.ViewModel.PhonebookVM

@{
    ViewBag.Title = "Create Phonebook Sms Management System";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}


<style>
    .form {
        background-color: black;
        color: whitesmoke;
        border: 6px solid black;
        margin: 20px;
        padding: 20px;
        width: 350px;
    }

    span.field-validation-error {
        color: red;
    }
</style>
@using (Html.BeginForm("Save", "Phonebooks"))
{
    <!--header-->
    <br />

    <h3 class="title1">CREATE PHONEBOOK</h3>
    <div class="main-w3l">
        <div class="w3layouts-main" style="height: auto !important; width: 100% !important; background-color: #fff;">
            <div class="form-title" style="height: 60px; color: #6F6F6F; "><h4>Create Phonebook Form : </h4></div>

            <form action="#" method="post">
                <div class="row">
                    <div class="alert alert-info">
                        Please fill details to create a phonebook
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class=" tom">
                                Phone Number  <label class="fa fa-phone-square" style="color:black"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.CellphoneNum, new { htmlAttributes = new { @class = "form-control", maxlength = "11", @type = "number", placeholder = "Enter a Number", minlength = "11" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.CellphoneNum)


                        <div class="form-group">
                            <div class="tom">
                                <br />
                                FullName  <label class="fa fa-user" style="color:black"> </label>
                            </div>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.FullName, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter Your Full Name" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.FullName)

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="tom">
                                Position  <label class="fa fa-location-arrow" style="color:black"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red;" })
                        @Html.EditorFor(model => model.Phonebook.Position, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter a Position" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.Position)
                        <div class="form-group">
                            <div class="tom">
                                <br />
                                Remarks  <label class="fa fa-arrow-circle-o-up" style="color:black"> </label>

                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.Remarks, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter a Remarks" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.Remarks)
                    </div>
                    <div class="col-md-12">
                        <div class="form-group" style="text-align:center;">


                            @{
                                if ((int)Session["Role_Id"] == 1)
                                {
                                    <div class="tom">
                                        <br />
                                        GroupName  <label class="fa fa-users" style="color:black"> </label>
                                    </div>
                                    @Html.DropDownListFor(model => model.Phonebook.GroupId, new SelectList(Model.GroupList, "GroupId", "GroupName"), "SELECT A GROUP", new { @class = "form-control", @placeholder = "Enter a Message Here", @style = "border:1px solid black; width: 100%;", id = "multipledrop", multiple = "multiple" })
                                }
                            }
                            <div class="clear"></div>
                        </div>
                        @Html.HiddenFor(o => o.Phonebook.PhoneId)
                        @Html.AntiForgeryToken()
                    </div>
                </div>
                <div style="padding: 2% 0;">
                    <div class="text-center">
                        <input type="submit" value="CREATE" class="btn btn-default" style="width: 120px; color:white; background-color: rgba(97, 100, 193, 0.85); height: 50px; border-radius: 20px; font-weight: 800; " />
                    </div>
              </div>
</form>

        </div>
    </div>
    <!--//main-->
    <!--footer-->
    <div class="footer-w3l">

    </div>

    <script src="~/Scripts/Adminjsdash/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/lib/chosen/chosen.css" rel="stylesheet" />
    <link href="~/lib/chosen/chosen.min.css" rel="stylesheet" />
    <script src="~/lib/chosen/chosen.jquery.js"></script>
    <script src="~/lib/chosen/chosen.jquery.min.js"></script>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(function () {

            $("#multipledrop").chosen();
            width: "100%"
        });

    </script>
}

