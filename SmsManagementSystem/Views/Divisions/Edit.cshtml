@model SmsManagementSystem.Models.CgppDivision
@{
    ViewBag.Title = "Create Division Sms Management System";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}

@Styles.Render("~/Content/css5")
@Scripts.Render("~/bundles/modernizr")
@*<h2>@((int)Session["Role_Id"] == 1 ? "Admin" : "User")</h2>*@
<style>

   
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3 class="title1">Edit Division</h3>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4 style="color: #6F6F6F;">Edit Division Form :</h4>
        </div>
        <div class="form-body"  data-example-id="simple-form-inline">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Division Name <label class="fa fa-building-o" style="color:black"> </label></label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "col-md-12", maxlength = "70", @type = "text", placeholder = "Enter Division Name", style = "border-color:black;height:36px;" } })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Office Name <label class="fa fa-building" style="color:black"> </label></label>
                    @Html.DropDownList("OfficeId", null, htmlAttributes: new { @class = "form-control" })
                </div>

                <div class="text-center">
                    <input type="submit" value="SUBMIT" class="btn btn-default" id="toastrSuccess" style="background-color: rgba(97, 100, 193, 0.85); color:white; border-radius: 20px; margin: 21px; width: 121px; height: 38px; font-weight: 800;" />
                </div>
            </form>
        </div>
    </div>
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


