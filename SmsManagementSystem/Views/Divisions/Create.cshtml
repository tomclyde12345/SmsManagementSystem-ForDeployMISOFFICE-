@model SmsManagementSystem.Models.CgppDivision

@{
    ViewBag.Title = "Create Division Sms Management System";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}

@Styles.Render("~/Content/css5")
@Scripts.Render("~/bundles/modernizr")
@*<h2>@((int)Session["Role_Id"] == 1 ? "Admin" : "User")</h2>*@
<style>

   
    span.field-validation-error {
        color: red;
        display:block;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3 class="title1">Create Division</h3>
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">

            <h4 style="color: #6F6F6F;">Create Division Form :</h4>
        </div>
        <div class="form-body" data-example-id="simple-form-inline">
            <form>

                <div class="form-group">
                    <div class="alert alert-info">
                        Please fill details to create a division
                    </div>
                    <label for="exampleInputEmail1">Division Name <label class="fa fa-building-o" style="color:black"> </label></label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "col-md-12", maxlength = "70", @type = "text", requred = "required", placeholder = "Enter Division Name", style = "height:36px;" } })
                    @Html.ValidationMessageFor(m => m.Name)

                    <div class="form-group">
                        <label for="exampleInputEmail1">Office Name <label class="fa fa-building" style="color:black"> </label></label>
                        @Html.DropDownList("OfficeID", new SelectList(ViewBag.Offices, "Id", "Name"), "Select Offices", htmlAttributes: new { @class = "col-md-12", style = "height:36px;", required = "required" })
                    </div>
                </div>
                <div class="row">
                    <div class="text-center">
                        <div class="row"></div>
                        <input type="submit" value="CREATE" class="btn btn-default" style="width: 120px; color:white; margin:auto; background-color: rgba(97, 100, 193, 0.85); height: 50px; border-radius: 20px; font-weight: 800;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


