@model SmsManagementSystem.Models.CgppGroup


@{
    ViewBag.Title = "Create Office Sms Management System";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}

@*<h2>@((int)Session["Role_Id"] == 1 ? "Admin" : "User")</h2>*@
<style>
    span.field-validation-error {
        color: red;
    }
</style>

<h3 class="title1">CREATE GROUPS</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-grids row widget-shadow" data-example-id="basic-forms">
        <div class="form-title">
            <h4 style="color: #6F6F6F;">Create Group Form :</h4>
        </div>
        <div class="form-body" data-example-id="simple-form-inline">
            <form class="form-inline">
                <div class="form-group">
                    <div class="alert alert-info">
                        Please fill details to create a  group
                    </div>
                    <label for="exampleInputName2"> Group Name <i class="fa fa-object-group"></i> </label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", maxlength = "70", @type = "text", placeholder = "Enter Group Name Here", style = "border-color:black", required = "required" } })
                    @Html.ValidationMessageFor(m => m.GroupName)
                    <div class="row"> </div>
                    <div class="text-center">
                        <input type="submit" value="CREATE" class="btn btn-default" style="width: 120px; color:white; background-color: rgba(97, 100, 193, 0.85); height: 50px; border-radius: 20px; font-weight: 800;" />
                    </div>
                </div>
            </form>
        </div>
    </div>





    <script src="~/Scripts/fontawesome.js"></script>
    <script src="~/Scripts/fontawesome.min.js"></script>
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
